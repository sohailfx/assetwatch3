<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/themeColor</item>
    <item name="colorAccent">@color/tealColor</item>
  </style>

  <style name="Headline6Text">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="Subtitle1Text">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorPrimaryLight</item>
  </style>

  <style name="Subtitle2Text">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimaryLight</item>
  </style>

  <style name="Body1Text">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorPrimaryLight</item>
  </style>

  <style name="Body2Text">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorPrimaryLight</item>
  </style>

  <style name="CaptionText">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/colorPrimaryLight</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  <style name="FormLabelText">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/themeColor</item>
  </style>
  <style name="FormValue">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>
</resources>