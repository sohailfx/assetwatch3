<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardElevation="0dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_40_nb">

        <ImageView
          android:id="@+id/AssetStatusIcon_image"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_centerInParent="true"
          android:tint="@color/greenColor"
          app:srcCompat="@drawable/ic_availableasset" />
      </RelativeLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingStart="16dp"
      android:paddingLeft="16dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/AssetNumber_tv"
          style="@style/Headline6Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:foregroundGravity="top"
          android:gravity="top"
          android:maxWidth="150dp"
          android:text="EX02375237" />

        <TextView
          android:id="@+id/AssetReadTimeStamp_tv"
          style="@style/CaptionText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="16dp"
          android:text="Feb-20 12:00 PM"
          android:textColor="@color/themeColor"
          android:textStyle="bold" />
      </RelativeLayout>

      <TextView
        android:id="@+id/AssetSubCategory_tv"
        style="@style/Subtitle2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sub Category" />

      <TextView
        android:id="@+id/AssetDescription_tv"
        style="@style/Body2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample description about this " />

      <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/borderColor" />
    </LinearLayout>
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>