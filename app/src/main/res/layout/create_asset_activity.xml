<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/backgroundColor"
  android:orientation="vertical"
  tools:context=".create_asset_activity">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar_id"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/backgroundColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="Add Asset" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingVertical="16dp">

      <TextView
        android:id="@+id/textView"
        style="@style/Body2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/form_container"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Category" />

          <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/categories" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Subcategory" />

          <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/categories" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Container Number" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_read_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="4dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_scanasset"
              android:tint="@color/themeColor" />

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_rfidsignal" />

            <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#00000000"
              android:hint="Enter Manually"
              android:textSize="16dp" />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Serial Number" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_read_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="4dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_scanasset"
              android:tint="@color/themeColor" />

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_rfidsignal" />

            <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#00000000"
              android:hint="Enter Manually"
              android:textSize="16dp" />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Asset ID" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_read_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="4dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_scanasset"
              android:tint="@color/themeColor" />

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_rfidsignal" />

            <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#00000000"
              android:hint="Enter Manually"
              android:textSize="16dp" />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Device Type" />

          <TextView
            style="@style/FormValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="GT1200" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Device ID" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_read_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="4dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_scanasset"
              android:tint="@color/themeColor" />

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_rfidsignal" />

            <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#00000000"
              android:hint="Enter Manually"
              android:textSize="16dp" />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Device Type 2" />

          <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/categories" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Alternate Tag ID" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_read_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="4dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_scanasset"
              android:tint="@color/themeColor" />

            <ImageButton
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:backgroundTint="@color/whiteColor"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_rfidsignal" />

            <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#00000000"
              android:hint="Enter Manually"
              android:textSize="16dp" />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Active Status" />

          <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/categories" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Disposition" />

          <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/categories" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingHorizontal="16dp">

          <TextView
            style="@style/FormLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Comments" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comments_input"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#00000000"
              android:hint="Enter Manually"
              android:textSize="16dp" />
          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

      <android.widget.Button
        android:id="@+id/save_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:background="@drawable/button_container"
        android:paddingHorizontal="32dp"
        android:text="Save"
        android:textColor="@color/whiteColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webView" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>